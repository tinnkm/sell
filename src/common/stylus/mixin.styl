border-1px($color,$show = true)
  position relative
  &:after
    if $show
      display block
    else
      display none
    position absolute
    left 0
    bottom 0
    width 100%
    border-top 1px solid $color
    // content 不可省略否则看不到线
    content ''
bg-image($url)
  background-image url($url+"@2x.png")
  @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    background-image url($url+"@3x.png")
